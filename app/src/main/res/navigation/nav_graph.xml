<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.traben.bidmaths.LandingFragment"
        android:label="Bid Ma(th)s"
        tools:layout="@layout/fragment_landing">

        <action
            android:id="@+id/action_StartGame"
            app:destination="@id/SecondFragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@android:anim/fade_out" >

        </action>
        <action
            android:id="@+id/action_FirstFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment

        android:id="@+id/SecondFragment"
        android:name="com.traben.bidmaths.ActivityFragment"
        android:label="Solve the equation!"
        tools:layout="@layout/fragment_activity">
        <argument
            android:name="gameIteration"
            app:argType="integer"
            app:nullable="false"
            android:defaultValue="0" />

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment">

        </action>
        <action
            android:id="@+id/action_SecondFragment_self"
            app:destination="@id/SecondFragment"
            app:popUpTo="@+id/FirstFragment">

        </action>
        <action
            android:id="@+id/action_SecondFragment_to_finishedFragment"
            app:destination="@id/finishedFragment" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.traben.bidmaths.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/finishedFragment"
        android:name="com.traben.bidmaths.FinishedFragment"
        android:label="FinishedFragment" >
        <action
            android:id="@+id/action_finishedFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_finishedFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
</navigation>